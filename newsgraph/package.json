{
  "name": "capi-graphql",
  "version": "1.0.0",
  "description": "",
  "license": "UNLICENSED",
  "main": "index.js",
  "scripts": {
    "start": "forever --minUptime 3000 ./dist/src/run.js",
    "dev": "DEBUG=* NODE_DEBUG=request yarn run build && yarn run watch",
    "build": "yarn run build-ts && yarn run tslint",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "serve": "nodemon dist/src/run.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn run watch-ts\" \"DEBUG=* yarn run serve\"",
    "test": "./node_modules/.bin/tslint --project . --fix && CAPI_V3_URL=http://test-capi3 CAPI_V2_URL=http://capi2-test NODE_ENV=test mocha -r ts-node/register 'test/**/*.ts'",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "author": "",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "logs/*"
    ],
    "delay": "1500"
  },
  "dependencies": {
    "@types/bunyan": "^1.8.4",
    "cors": "^2.8.4",
    "dcs-logger": "http://stash.news.com.au/scm/dcs/dcs-logger.git#439ebe65c63566fdf46f7214127709ad189b6612",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "express-graphql": "newscorpaus/express-graphql#d0177e86d3c8061f3af257d7d92b5ceb0c43646a",
    "forever": "^0.15.3",
    "graphql": "^0.11.7",
    "graphql-tools": "^2.19.0",
    "graphql-type-json": "^0.2.1",
    "morgan": "^1.9.0",
    "newrelic": "^4.8.1",
    "ramda": "^0.25.0",
    "request": "^2.87.0",
    "request-promise": "^4.2.2",
    "ts-node": "^3.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.1.2",
    "@types/cors": "^2.8.3",
    "@types/debug": "0.0.30",
    "@types/express": "^4.11.0",
    "@types/express-graphql": "0.0.35",
    "@types/graphql": "^0.11.8",
    "@types/graphql-type-json": "^0.1.2",
    "@types/mocha": "^2.2.47",
    "@types/morgan": "^1.7.35",
    "@types/nock": "^9.3.1",
    "@types/node": "^8.10.17",
    "@types/ramda": "^0.25.16",
    "@types/request": "^2.0.13",
    "@types/request-promise": "^4.1.40",
    "@types/supertest": "^2.0.4",
    "@types/zen-observable": "^0.5.3",
    "apollo-link": "^1.0.7",
    "chai": "^4.1.2",
    "concurrently": "^3.5.1",
    "json-diff": "^0.5.2",
    "mocha": "^4.1.0",
    "nock": "^10.0.6",
    "nodemon": "^1.17.5",
    "supertest": "^3.0.0",
    "tslint": "^5.9.1",
    "typescript": "^3.2.2"
  }
}
