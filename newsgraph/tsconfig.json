{
  "compilerOptions": {
      "module": "commonjs",
      "target": "es6",
      "strictNullChecks": true,
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "lib": [
        "esnext"
      ],
      "paths": {
          "*": [
              "node_modules/*",
              "src/types/*"
          ]
      },
      "typeRoots": [
          "./node_modules/@types/",
          "./src/types/"
      ]
  },
  "include": [
      "src/**/*",
      "test/**/*"
  ]
}