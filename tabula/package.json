{
  "name": "tabula",
  "version": "1.0.0",
  "description": "A JSON reverse proxy for Newscorp data",
  "repository": {
    "type": "git",
    "url": "http://stash.news.com.au/projects/DCS/repos/pp-services/browse"
  },
  "author": "Nicholas Faiz",
  "scripts": {
    "start": "node dist/src/server.js",
    "build": "yarn run build-ts && yarn run tslint && yarn run static",
    "static": "cp -r src/public dist/src",
    "serve": "nodemon dist/src/server.js",
    "watch": "yarn run build && concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"yarn run watch-ts\" \"yarn run serve\"",
    "test": "NODE_ENV=test mocha -r ts-node/register 'test/**/*.ts'",
    "test:unit": "NODE_ENV=test mocha -r ts-node/register 'test/unit/**/*.ts'",
    "test:integration": "NODE_ENV=test mocha -r ts-node/register 'test/integration/**/*.ts'",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint --fix -c tslint.json -p tsconfig.json"
  },
  "dependencies": {
    "agent": "https://github.com/newscorpaus/node-agent.git#4429fcb60abebc96ebec6b6c4e8c15386d5be178",
    "async": "^2.1.2",
    "body-parser": "^1.15.2",
    "compression": "^1.6.2",
    "dcs-logger": "http://stash.news.com.au/scm/dcs/dcs-logger.git#439ebe65c63566fdf46f7214127709ad189b6612",
    "dotenv": "^2.0.0",
    "errorhandler": "^1.4.3",
    "express": "^4.14.0",
    "express-session": "^1.14.2",
    "forever": "^0.15.3",
    "ioredis": "^3.1.2",
    "jsonpath": "^1.0.0",
    "lusca": "^1.4.1",
    "newrelic": "^4.8.1",
    "normalize-url": "^2.0.1",
    "query-string": "^5.0.0",
    "ramda": "^0.24.1",
    "request": "^2.83.0",
    "serve-favicon": "^2.4.5",
    "typescript": "^3.2.2",
    "update": "^0.7.4",
    "yarn": "^1.9.4"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/bcrypt-nodejs": "0.0.30",
    "@types/body-parser": "^1.16.2",
    "@types/chai": "^4.0.3",
    "@types/compression": "0.0.33",
    "@types/dotenv": "^2.0.20",
    "@types/errorhandler": "0.0.30",
    "@types/express": "^4.0.35",
    "@types/express-session": "0.0.32",
    "@types/jquery": "^2.0.41",
    "@types/jsonpath": "^0.2.0",
    "@types/mocha": "^2.2.41",
    "@types/newrelic": "^3.3.0",
    "@types/nock": "^9.1.3",
    "@types/node": "^7.0.12",
    "@types/normalize-url": "^1.9.1",
    "@types/query-string": "^5.0.0",
    "@types/ramda": "^0.24.11",
    "@types/request": "^2.0.3",
    "@types/serve-favicon": "^2.2.30",
    "@types/supertest": "^2.0.0",
    "@types/uuid": "^3.4.2",
    "bunyan": "^1.8.12",
    "chai": "^4.1.1",
    "concurrently": "^3.4.0",
    "mocha": "^3.5.3",
    "nock": "^9.2.5",
    "nodemon": "^1.11.0",
    "shelljs": "^0.7.7",
    "supertest": "^2.0.1",
    "ts-node": "^3.3.0",
    "tslint": "^5.0.0",
    "uuid": "^3.1.0"
  }
}
