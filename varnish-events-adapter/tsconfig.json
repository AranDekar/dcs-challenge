{
  "compilerOptions": {
    "experimentalDecorators": true,
      "lib": ["dom", "es5", "es2015.collection", "es2015.promise", "esnext.asynciterable"],
      "module": "commonjs",
      "target": "es6",
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "paths": {
          "*": [
              "node_modules/*",
              "src/*"
          ]
      },
      "typeRoots": [
          "./node_modules/@types",
          "./src/types/"
      ]
  },
  "include": [
      "src/**/*",
      "test/**/*"
  ]
}